@page "{id}"
@model GraduationProject.Pages.Events.DeleteModel

@{
    ViewData["Title"] = $"Delete {Model.Evnt.Name}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evnt.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evnt.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evnt.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evnt.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evnt.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evnt.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evnt.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evnt.EndDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="@Model.Evnt.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Events/Manage">Back to List</a>
    </form>
</div>