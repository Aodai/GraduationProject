@page
@using GraduationProject.ApplicationLogic.Models
@model GraduationProject.Pages.Events.ManageModel

@{
    ViewData["Title"] = "My events";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-page="/Events/Details" asp-route-id="@item.Id">View</a>
                    <a asp-page="/Events/Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-page="/Events/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>